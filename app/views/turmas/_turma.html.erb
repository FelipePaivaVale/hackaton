<div id="<%= dom_id turma %>" class="turma-card">
  <style>
    .turma-card {
      border: 1px solid #ddd;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin-bottom: 20px;
      background-color: #fff;
      transition: transform 0.2s;
    }

    .turma-card:hover {
      transform: translateY(-4px);
    }

    .turma-content {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .turma-title {
      font-size: 1.5rem;
      margin: 0;
      color: #333;
    }

    .turma-details {
      list-style: none;
      padding: 0;
      margin: 0;
      color: #555;
    }

    .turma-details li {
      margin-bottom: 8px;
    }

    .turma-button {
      display: inline-block;
      padding: 10px 16px;
      background-color: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      text-align: center;
      transition: background-color 0.3s;
    }

    .turma-button:hover {
      background-color: #0056b3;
    }
  </style>

  <div class="turma-content">
    <h2 class="turma-title"><%= turma.nome %></h2>

    <ul class="turma-details">
      <li><strong>Horas:</strong> <%= turma.horas %></li>
      <li><strong>Status:</strong> <%= turma.status %></li>
      <li><strong>Máximo de Faltas:</strong> <%= turma.maximo_faltas %></li>
    </ul>

    <%= link_to 'Registrar Presença', registrar_presenca_turma_path(turma), class: 'turma-button' %>
  </div>
</div>
